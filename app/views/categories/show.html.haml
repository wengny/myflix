%section.genre
  %header.clearfix
    %h1 Comedies
    .genre_sorting
      Sort by:
      %select(name="")
        %option(value="a-z") Title: A - Z
        %option(value="z-a") Title: Z - A
        %option(value="rating") Rating
  %article.row
    - @videos.each do |video|
      .video.col-md-2
        = link_to video_path(video) do 
          %img(src="/tmp/#{['futurama', 'south_park', 'family_guy'].sample}.jpg")
